    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="background.jpg" />
    <None Remove="img\film2.png" />
    <None Remove="img\marka2.png" />
    <None Remove="img\ps.png" />
    <None Remove="img\sport.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="background.jpg" />
    <Resource Include="img\film2.png" />
    <Resource Include="img\marka2.png" />
