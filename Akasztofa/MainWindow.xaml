<Window x:Class="Akasztofa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Akasztofa"
        mc:Ignorable="d"
        Title="Akasztófa" Height="650" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Háttér-->
        <Rectangle Width="550" Height="350" Stroke="Black" StrokeThickness="5" Margin="0"/>
        <Label Content="Akasztófa" Margin="109,6,0,354" Width="102" Background="White" HorizontalAlignment="Left" FontSize="20" HorizontalContentAlignment="Center" FontWeight="Bold" RenderTransformOrigin="0.52,0.732"/>
        <Image Source="background.jpg" Width="540" Height="340" Stretch="Fill"/>

        <!--Akasztófa-->
        <Grid x:Name="akasztofaGrid">
            <Line X1="220" X2="350" Y1="232" Y2="232" Stroke="Black" StrokeThickness="5" x:Name="akasztofa1" Visibility="Hidden"/>
            <Line X1="345" X2="345" Y1="80" Y2="232" Stroke="Black" StrokeThickness="5" x:Name="akasztofa2" Visibility="Hidden"/>
            <Line X1="220" X2="350" Y1="80" Y2="80" Stroke="Black" StrokeThickness="5" x:Name="akasztofa3" Visibility="Hidden"/>
            <Line X1="300" X2="350" Y1="80" Y2="120" Stroke="Black" StrokeThickness="5" x:Name="akasztofa4" Visibility="Hidden"/>
            <Line X1="220" X2="220" Y1="80" Y2="120" Stroke="Black" StrokeThickness="5" x:Name="akasztofa5" Visibility="Hidden"/>

            <Ellipse Stroke="Black" StrokeThickness="5" Width="30" Height="30" Margin="205, 50, 350, 200" x:Name="akasztofa6" Visibility="Hidden"/>
            <Line X1="220" X2="220" Y1="140" Y2="180" Stroke="Black" StrokeThickness="5" x:Name="akasztofa7" Visibility="Hidden"/>
            <Line X1="200" X2="220" Y1="140" Y2="160" Stroke="Black" StrokeThickness="5" x:Name="akasztofa8" Visibility="Hidden"/>
            <Line X1="240" X2="220" Y1="140" Y2="160" Stroke="Black" StrokeThickness="5" x:Name="akasztofa9" Visibility="Hidden"/>
            <Line X1="200" X2="220" Y1="200" Y2="180" Stroke="Black" StrokeThickness="5" x:Name="akasztofa10" Visibility="Hidden"/>
            <Line X1="240" X2="220" Y1="200" Y2="180" Stroke="Black" StrokeThickness="5" x:Name="akasztofa11" Visibility="Hidden"/>
        </Grid>
        
        <!--Játéktér-->
        <Button Content="Test" Height="30" Width="100" Grid.Row="1" x:Name="Test" Click="Test_Click"/>

    </Grid>
</Window>
